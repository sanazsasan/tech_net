<% provide(:title, 'Login') %>

<div align="center" >
	<h1>login</h1>
	<%= form_for(:session, url: sessions_path) do |f| %>
	<table border=0 >

		<tr>
			<td colspan="2"><%= f.text_field :username ,:style => "width: 255px" , :placeholder => "Username" %></td>
		</tr>
		<tr>
			<td colspan="2"><%= f.password_field :password ,:style => "width: 255px" , :placeholder => "Password" %></td>
		</tr>
		<tr>
			<td align="center"><%= link_to "Forgot your password?" , new_password_reset_path %></td>
			<td align="right">  <%= f.submit "login",:style => "width:80px;height:35px" %></td>

		</tr>
		<tr>
			<td colspan="2" align=center><%= link_to "Register as a new member!" , register_path ,:method => :get, :class => "button" %>
				</td>

		</tr>
	</table>	

    <% end %>
</div>

